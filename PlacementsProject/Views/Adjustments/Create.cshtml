@model PlacementsProject.Models.ViewModels.AdjustmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Adjustment</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        Booked Amount
    </dt>
    <dd>
        @ViewData["BookedAmount"]
    </dd>
    <dt>
        Current Adjustment
    </dt>
    <dd>
        @ViewData["CurrentAdjustment"]
    </dd>
    <dt>
        Current Actual Amount
    </dt>
    <dd>
        @ViewData["CurrentActualAmount"]
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <!-- TODO Add client side validation for AdjustmentAmount is position and less than BookedAmount -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdjustmentAmount" class="control-label"></label>
                <input asp-for="AdjustmentAmount" class="form-control"/>
                <span asp-validation-for="AdjustmentAmount" class="text-danger"></span>
                <input asp-for="LineItemId" type="hidden" value=@ViewData["LineItemId"]/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="LineItems" asp-action="Details" asp-route-id="@ViewData["LineItemId"]">Back to Line Item</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
